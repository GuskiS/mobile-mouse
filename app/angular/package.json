{
  "version": "1.0.0",
  "name": "mobile-mouse",
  "description": "Controlling computer mouse with phone",
  "homepage": "https://github.com/GuskiS/mobile-mouse",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "outdated": "YARN_SILENT=0 yarn outdated || true",
    "build:dev": "concurrently 'yarn run mobile:dev' 'yarn run desktop:dev'",
    "build:prod": "concurrently 'yarn run mobile:prod' 'yarn run desktop:prod' 'yarn run server:prod'",
    "release:prod": "yarn run mobile:prod && yarn run desktop:prod && yarn run server:prod",
    "postbuild:prod": "node server.js",
    "mobile": "ng build --app mobile",
    "mobile:dev": "yarn run mobile -- --watch",
    "mobile:prod": "yarn run mobile -- --prod",
    "desktop": "ng build --app desktop",
    "desktop:dev": "yarn run desktop -- --watch",
    "desktop:prod": "yarn run desktop -- --prod",
    "server:prod": "ng build --app server --prod"
  },
  "dependencies": {
    "@angular/animations": "4.3.3",
    "@angular/cdk": "2.0.0-beta.8",
    "@angular/common": "4.3.3",
    "@angular/compiler": "4.3.3",
    "@angular/core": "4.3.3",
    "@angular/forms": "4.3.3",
    "@angular/http": "4.3.3",
    "@angular/material": "2.0.0-beta.8",
    "@angular/platform-browser": "4.3.3",
    "@angular/platform-browser-dynamic": "4.3.3",
    "@angular/router": "4.3.3",
    "core-js": "2.4.1",
    "hammerjs": "2.0.8",
    "inobounce": "0.1.4",
    "nipplejs": "0.6.6",
    "normalize.css": "7.0.0",
    "rxjs": "5.4.2",
    "web-animations-js": "2.3.1",
    "zone.js": "0.8.16"
  },
  "devDependencies": {
    "@angular/cli": "1.3.0-rc.3",
    "@angular/compiler-cli": "4.3.3",
    "@angular/language-service": "4.3.3",
    "@angular/platform-server": "4.3.3",
    "@angular/service-worker": "1.0.0-beta.16",
    "@types/electron": "1.6.10",
    "@types/node": "8.0.19",
    "codelyzer": "3.1.2",
    "concurrently": "3.5.0",
    "glob": "7.1.2",
    "ts-node": "3.3.0",
    "tslint": "5.5.0",
    "typescript": "2.4.2"
  },
  "author": {
    "name": "Edvards LazdƒÅns",
